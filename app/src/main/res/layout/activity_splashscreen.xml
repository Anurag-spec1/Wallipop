<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#5F5B5B">

    <!-- Background Fire Animation (GIF) -->

    <!-- Wallipop Title with Fiery Text Effect -->
    <LinearLayout
        android:id="@+id/lettersContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/letterW"
            android:fontFamily="@font/main_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:layout_marginStart="3dp"
            android:shadowColor="@android:color/holo_red_light"
            android:shadowRadius="10"/>

        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/letterA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:layout_marginStart="3dp"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowRadius="10"/>

        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/letterL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:layout_marginStart="3dp"
            android:shadowColor="@android:color/holo_red_light"
            android:shadowRadius="10"/>

        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/letterL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:layout_marginStart="3dp"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowRadius="10"/>

        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/letterI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:layout_marginStart="3dp"
            android:shadowColor="@android:color/holo_red_light"
            android:shadowRadius="10"/>

        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/letterP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:layout_marginStart="3dp"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowRadius="10"/>

        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/letterO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:layout_marginStart="3dp"
            android:shadowColor="@android:color/holo_red_light"
            android:shadowRadius="10"/>

        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/letterP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:layout_marginStart="3dp"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:alpha="0"
            android:shadowColor="@android:color/holo_orange_light"
            android:shadowRadius="10"/>
    </LinearLayout>
</RelativeLayout>


