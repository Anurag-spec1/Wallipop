<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_signup"
    android:orientation="vertical"
    tools:context=".Signup_in">


    <carbon.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/main_font"
        android:text="REGISTER HERE"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <carbon.widget.EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:fontFamily="@font/main_font"
        android:hint="Enter your email id"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:paddingStart="14dp"
        android:textSize="18sp"
        app:carbon_cornerRadius="8dp"
        app:carbon_elevation="20dp"
        app:carbon_elevationShadowColor="@color/black" />


    <carbon.widget.EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:elevation="20dp"
        android:fontFamily="@font/main_font"
        android:hint="Enter your password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingStart="14dp"
        android:textSize="18sp"
        app:carbon_cornerRadius="8dp"
        app:carbon_elevationShadowColor="@color/black" />


    <carbon.widget.EditText
        android:id="@+id/signup_confirmpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:elevation="20dp"
        android:fontFamily="@font/main_font"
        android:hint="Confirm Your Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingStart="14dp"
        android:textSize="18sp"
        app:carbon_cornerRadius="8dp"
        app:carbon_elevationShadowColor="@color/black" />

    <carbon.widget.Button
        android:id="@+id/signup_btn"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#FFB400"
        android:fontFamily="@font/main_font"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:carbon_cornerRadius="10dp"
        app:carbon_elevation="10dp"
        app:carbon_elevationShadowColor="@color/black" />

    <TextView
        android:id="@+id/loginRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/main_font"
        android:text="Already have an account? Login"
        android:textColor="@color/white"
        android:textSize="18sp" />


</LinearLayout>